!to "Test.prg", cbm
!sal	; Causes the label saving routines to also dump out local labels
!sl "Test.map"	; Save all labels
!svl "Test.lbl"	; Save referenced labels in VICE format
!pdb "Test.pdb"	; Save PDB format data
!source "ACME_Lib/6502/std.a"
!cpu 6510
!ct pet


!macro MFOO {
	lda #0
	sta $500
}

!initmem $77

localLabel = 1234

*=$400
GlobalLabel
	lda #0
	sta $400
	+MFOO
	+MFOO
	+MFOO
	+MFOO
	rts
.localLabel
	lda GlobalLabel
	lda .localLabel
	rts
!zn {
.reallyLocal
	lda .reallyLocal
	+MFOO
	rts
}

!zn
.anotherLocal
	lda .anotherLocal
	+inc16 .anotherLocal

!zn
.anotherLocal2
	lda .anotherLocal2

!by $12


*=*+13


!by $32

