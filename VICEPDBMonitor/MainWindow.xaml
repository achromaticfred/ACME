<Window x:Class="VICEPDBMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VICE PDB Monitor" Height="423.684" Width="660.526" ResizeMode="CanResizeWithGrip">
    <Grid x:Name="monitorText" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <TextBox x:Name="mTextBox" Margin="10,10,175,37" Text="Waiting to connect..." IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" IsUndoEnabled="False"/>
        <TextBox x:Name="mCommandBox" Margin="10,0,10,10" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" FontFamily="Consolas" KeyDown="commandBox_KeyDown" Height="22" VerticalAlignment="Bottom"/>
        <TextBox x:Name="mLabelsBox" Margin="0,10,10,102" Text="TextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Right" Width="160"/>
        <Button Content="Break" HorizontalAlignment="Right" Margin="0,0,95,37" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>
        <CheckBox x:Name="mDoSource" Content="Source" HorizontalAlignment="Right" Margin="0,0,114,82" IsChecked="True" Click="mDoSource_Click" Height="15" VerticalAlignment="Bottom"/>
        <CheckBox x:Name="mDoDisassembly" Content="Disassembly" Margin="0,0,85,62" IsChecked="True" Click="mDoDisassembly_Click" HorizontalAlignment="Right" Width="85" Height="15" VerticalAlignment="Bottom"/>
        <Button Content="Step" HorizontalAlignment="Right" Margin="0,0,10,37" VerticalAlignment="Bottom" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>
