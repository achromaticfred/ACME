<Window x:Class="VICEPDBMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VICE PDB Monitor" Height="501.684" Width="970.526" ResizeMode="CanResizeWithGrip">
    <Grid x:Name="monitorText" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="mCommandBox" Margin="10,0,10,10" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" FontFamily="Consolas" KeyDown="commandBox_KeyDown" Height="22" VerticalAlignment="Bottom"/>
        <Button Content="Break" HorizontalAlignment="Right" Margin="0,0,134,107" VerticalAlignment="Bottom" Width="75" Click="Button_Click_Break" Height="20"/>
        <CheckBox x:Name="mDoSource" Content="Source" HorizontalAlignment="Right" Margin="0,0,153,152" IsChecked="True" Click="mDoSource_Click" Height="15" VerticalAlignment="Bottom" Width="56"/>
        <CheckBox x:Name="mDoDisassembly" Content="Disassembly" Margin="0,0,124,132" Click="mDoDisassembly_Click" HorizontalAlignment="Right" Width="85" Height="15" VerticalAlignment="Bottom"/>
        <Button Content="Step in" HorizontalAlignment="Right" Margin="0,0,49,81" VerticalAlignment="Bottom" Width="75" Click="Button_Click_StepIn" Height="20"/>
        <CheckBox x:Name="mCheckUsedLabels" Content="Used labels" Margin="0,0,49,152" VerticalAlignment="Bottom" Click="mCheckUsedLabels_Click" HorizontalAlignment="Right" Width="80" IsChecked="True" Height="15"/>

        <Grid Margin="0,0,0,37" RenderTransformOrigin="0.727,0.489">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="220" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="mTextBox" Margin="10,48,10,0" Text="Waiting to connect..." IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" IsUndoEnabled="False"/>
            <TextBox x:Name="mRegsBox" Margin="10,10,10,0" TextWrapping="Wrap" Text="TextBox" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Disabled" Height="33" VerticalAlignment="Top" FontFamily="Consolas"/>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
            <TextBox x:Name="mLabelsBox" Margin="10,10,10,139" Text="TextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Column="2"/>
        </Grid>
        <Button Content="Step over" HorizontalAlignment="Right" Margin="0,0,134,81" VerticalAlignment="Bottom" Width="75" Click="Button_Click_StepOver" Height="20"/>
        <Button Content="Step out" HorizontalAlignment="Right" Margin="0,0,134,51" VerticalAlignment="Bottom" Width="75" Click="Button_Click_StepOut" Height="20"/>
        <Button Content="Go" HorizontalAlignment="Right" Margin="0,0,49,107" VerticalAlignment="Bottom" Width="75" Click="Button_Click_Go" Height="20"/>
    </Grid>
</Window>
